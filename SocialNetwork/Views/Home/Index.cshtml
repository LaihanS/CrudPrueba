@{
    ViewData["Title"] = "Mantenimiento Properties";
}

@using SocialNetwork.Core.Application.ViewModels;

@model List<PropertyViewModel>;

<div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Mantenimiento Properties</h1>
        <p>
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary my-2">Crear Property</a>
        </p>
    </div>
</div>

<div class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @if (Model.Count == 0 || Model == null)
        {
            <h2>No hay Properties</h2>
        }
        else
        {
            @foreach (PropertyViewModel item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4>@item.Name</h4>
                            <p class="card-text">@item.Price</p>
                             <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-outline-info mx-2">Editar</a>
                                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-outline-danger mx-2">Borrar</a>
                               </div>
                             </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>
