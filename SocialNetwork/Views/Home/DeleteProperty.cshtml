@model SocialNetwork.Core.Application.ViewModels.SavePropertyViewModel
@{
    ViewData["Title"] = "Eliminar Propiedad";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>Esta seguro que desea eliminar la propiedad @Model.Name? de id @Model.id</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Home" asp-action="Delete">

                    <input type="hidden" asp-for="id"/>

                    <button type="submit" class="btn btn-primary">Eliminar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Volver atras</a>
                </form>
            </div>
        </div>
    </div>
</div>

